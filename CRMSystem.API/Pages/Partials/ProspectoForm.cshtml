@page
@model CRMSystem.API.Pages.Partials.ProspectoFormModel

<div class="modal-header">
    <h5 class="modal-title">@(Model.ProspectoId.HasValue ? "Editar" : "Nuevo") Prospecto</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form id="prospecto-form">
        <input type="hidden" id="prospecto-id" value="@Model.ProspectoId">
        
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Nombre de la Empresa *</label>
                <input type="text" class="form-control" name="nombreEmpresa" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">RFC</label>
                <input type="text" class="form-control" name="rfc" maxlength="13">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Nombre del Contacto *</label>
                <input type="text" class="form-control" name="nombreContacto" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Apellido del Contacto *</label>
                <input type="text" class="form-control" name="apellidoContacto" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Email *</label>
                <input type="email" class="form-control" name="email" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Teléfono</label>
                <input type="tel" class="form-control" name="telefono">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Fuente *</label>
                <select class="form-select" name="fuenteProspectoId" id="fuente-select" required>
                    <option value="">Seleccione...</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Estado</label>
                <select class="form-select" name="estadoProspecto">
                    <option value="Nuevo">Nuevo</option>
                    <option value="Contactado">Contactado</option>
                    <option value="Calificado">Calificado</option>
                    <option value="Propuesta">Propuesta</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Sucursal *</label>
                <select class="form-select" name="sucursalId" required>
                    <option value="">Seleccione...</option>
                    <option value="1">Norte</option>
                    <option value="2">Centro</option>
                    <option value="3">Sur</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Vendedor Asignado</label>
                <select class="form-select" name="vendedorAsignadoId">
                    <option value="">Sin asignar</option>
                    <option value="1">Juan Pérez</option>
                    <option value="2">María García</option>
                    <option value="3">Carlos López</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Notas</label>
            <textarea class="form-control" name="notas" rows="3"></textarea>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="saveProspecto()">Guardar</button>
</div>

<script>
    // Load fuentes
    fetch('/api/Prospectos/fuentes')
        .then(r => r.json())
        .then(fuentes => {
            const select = document.getElementById('fuente-select');
            fuentes.forEach(f => {
                const option = document.createElement('option');
                option.value = f.id;
                option.textContent = f.nombreFuente;
                select.appendChild(option);
            });
        });

    // Load existing prospecto if editing
    const prospectoId = document.getElementById('prospecto-id').value;
    if (prospectoId) {
        fetch(`/api/Prospectos/${prospectoId}`)
            .then(r => r.json())
            .then(p => {
                document.querySelector('[name="nombreEmpresa"]').value = p.nombreEmpresa;
                document.querySelector('[name="rfc"]').value = p.rfc || '';
                document.querySelector('[name="nombreContacto"]').value = p.nombreContacto;
                document.querySelector('[name="apellidoContacto"]').value = p.apellidoContacto;
                document.querySelector('[name="email"]').value = p.email;
                document.querySelector('[name="telefono"]').value = p.telefono || '';
                document.querySelector('[name="fuenteProspectoId"]').value = p.fuenteProspectoId;
                document.querySelector('[name="estadoProspecto"]').value = p.estadoProspecto;
                document.querySelector('[name="sucursalId"]').value = p.sucursalId;
                document.querySelector('[name="vendedorAsignadoId"]').value = p.vendedorAsignadoId || '';
                document.querySelector('[name="notas"]').value = p.notas || '';
            });
    }

    async function saveProspecto() {
        const form = document.getElementById('prospecto-form');
        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Convert IDs to numbers
        data.fuenteProspectoId = parseInt(data.fuenteProspectoId);
        data.sucursalId = parseInt(data.sucursalId);
        if (data.vendedorAsignadoId) {
            data.vendedorAsignadoId = parseInt(data.vendedorAsignadoId);
        }

        try {
            const prospectoId = document.getElementById('prospecto-id').value;
            const url = prospectoId ? `/api/Prospectos/${prospectoId}` : '/api/Prospectos';
            const method = prospectoId ? 'PUT' : 'POST';

            const response = await fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                // Close modal
                bootstrap.Modal.getInstance(document.getElementById('crudModal')).hide();
                
                // Refresh list
                htmx.trigger('#prospectos-list', 'load');
                
                // Show notification
                if (window.showNotification) {
                    showNotification(prospectoId ? 'Prospecto actualizado' : 'Prospecto creado', 'success');
                }
            } else {
                const error = await response.json();
                alert('Error: ' + (error.title || 'No se pudo guardar el prospecto'));
            }
        } catch (error) {
            console.error('Error saving prospecto:', error);
            alert('Error al guardar: ' + error.message);
        }
    }
</script>

